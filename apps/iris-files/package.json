{
  "name": "iris-files",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "description": "Iris Files - content-addressed file storage on Nostr",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:docs": "vite --config vite.docs.config.ts",
    "dev:video": "vite --config vite.video.config.ts",
    "dev:iris": "vite --config vite.iris.config.ts",
    "dev:maps": "vite --config vite.maps.config.ts",
    "build": "pnpm --filter hashtree build && pnpm --filter hashtree-index build && vite build",
    "build:docs": "pnpm --filter hashtree build && vite build --config vite.docs.config.ts",
    "build:video": "pnpm --filter hashtree build && vite build --config vite.video.config.ts",
    "build:iris": "pnpm --filter hashtree build && pnpm --filter hashtree-index build && vite build --config vite.iris.config.ts",
    "build:maps": "pnpm --filter hashtree build && vite build --config vite.maps.config.ts",
    "build:analyze": "vite build && echo '\nBundle stats: dist/stats.html\nBundle list: dist/stats-list.txt'",
    "preview": "vite preview",
    "preview:docs": "vite preview --config vite.docs.config.ts",
    "preview:video": "vite preview --config vite.video.config.ts",
    "preview:maps": "vite preview --config vite.maps.config.ts",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test:e2e": "playwright test",
    "test:e2e:fast": "E2E_FAST=1 playwright test",
    "test:e2e:slow": "playwright test e2e/yjs-collaboration.spec.ts e2e/livestream-viewer.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:iris": "playwright test --config=playwright.iris.config.ts",
    "test:tauri": "wdio run wdio.tauri.conf.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@ffmpeg/core": "0.12.6",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@msgpack/msgpack": "^3.1.2",
    "@noble/hashes": "^2.0.1",
    "@scure/base": "^2.0.0",
    "@scure/bip39": "^2.0.0",
    "@tiptap/core": "^2.26.2",
    "@tiptap/extension-collaboration": "^2.26.2",
    "@tiptap/extension-collaboration-cursor": "^2.26.2",
    "@tiptap/extension-image": "^2.27.1",
    "@tiptap/extension-placeholder": "^2.26.2",
    "@tiptap/pm": "^2.26.2",
    "@tiptap/starter-kit": "^2.26.2",
    "coco-cashu-core": "file:../../ts/vendor/coco-cashu-core",
    "coco-cashu-indexeddb": "file:../../ts/vendor/coco-cashu-indexeddb",
    "dexie": "^4.2.1",
    "dompurify": "^3.3.1",
    "emulators": "^8.3.9",
    "emulators-ui": "^0.73.9",
    "fflate": "^0.8.2",
    "hashtree": "workspace:*",
    "hashtree-index": "workspace:*",
    "jsqr": "^1.4.0",
    "leaflet": "^1.9.4",
    "marked": "^15.0.0",
    "minidenticons": "^4.2.1",
    "ndk": "workspace:*",
    "ndk-cache": "workspace:*",
    "nostr-social-graph": "^1.0.33",
    "nostr-tools": "^2.18.2",
    "nostr-wasm": "^0.1.0",
    "qrcode": "^1.5.4",
    "wasm-git": "^0.0.13",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.75",
    "@playwright/test": "^1.49.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/cli": "^2.6.0",
    "@tauri-apps/plugin-autostart": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-notification": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2",
    "@tsconfig/svelte": "^5.0.4",
    "@types/dompurify": "^3.2.0",
    "@types/leaflet": "^1.9.14",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@unocss/preset-icons": "^66.5.9",
    "@unocss/preset-typography": "^66.5.9",
    "@wdio/cli": "^9.22.0",
    "@wdio/local-runner": "^9.22.0",
    "@wdio/mocha-framework": "^9.22.0",
    "@wdio/spec-reporter": "^9.20.0",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "html2canvas": "^1.4.1",
    "open-props": "^1.7.16",
    "rollup-plugin-visualizer": "^6.0.5",
    "svelte": "^5.16.0",
    "svelte-check": "^4.1.4",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.3.0",
    "unocss": "^66.5.9",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17",
    "workbox-precaching": "^7.4.0",
    "workbox-window": "^7.4.0",
    "ws": "^8.18.3"
  }
}
