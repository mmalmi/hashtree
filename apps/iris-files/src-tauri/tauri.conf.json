{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Iris",
  "version": "0.1.0",
  "identifier": "to.iris.browser",
  "build": {
    "frontendDist": "../dist-iris",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "npm run dev:iris",
    "beforeBuildCommand": "npm run build:iris"
  },
  "app": {
    "windows": [
      {
        "title": "Iris",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "trafficLightPosition": { "x": 12.0, "y": 23.0 }
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: tauri: asset: htree: https: wss:; script-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: tauri: asset: htree: https: wss:; img-src 'self' data: blob: htree: https: http://127.0.0.1:* http://localhost:*; media-src 'self' blob: htree: https: http://127.0.0.1:* http://localhost:*; connect-src 'self' htree: https: wss: ws: http://127.0.0.1:* http://localhost:*"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    },
    "externalBin": [],
    "resources": []
  }
}
